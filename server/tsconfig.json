{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"],
            "@data/*": ["src/data/*"],
            "@src/*": ["src/*"]
        }
    },
    "include": ["src/**/*"]
}
